<div class="edit-inventory-view">
  <h1><%= title %></h1>

  <% if (messages && messages.notice) { %>
    <div class="flash-success"><%= messages.notice %></div>
  <% } %>
  <% if (messages && messages.error) { %>
    <div class="flash-error"><%= messages.error %></div>
  <% } %>
  <% if (errors && errors.length > 0) { %>
    <ul class="notice">
      <% errors.forEach(error => { %>
        <li><%= error.msg %></li>
      <% }) %>
    </ul>
  <% } %>

  <form id="updateForm" action="/inv/update" method="post">
    <div>
      <label for="classification_id">Classification:</label>
      <%- classificationSelect %>
    </div>
    <div>
      <label for="inv_make">Make:</label>
      <input type="text" id="inv_make" name="inv_make" required value="<%= typeof inv_make !== 'undefined' ? inv_make : '' %>">
    </div>
    <div>
      <label for="inv_model">Model:</label>
      <input type="text" id="inv_model" name="inv_model" required value="<%= typeof inv_model !== 'undefined' ? inv_model : '' %>">
    </div>
    <div>
      <label for="inv_year">Year:</label>
      <input type="number" id="inv_year" name="inv_year" min="1900" max="2025" required value="<%= typeof inv_year !== 'undefined' ? inv_year : '' %>">
    </div>
    <div>
      <label for="inv_description">Description:</label>
      <textarea id="inv_description" name="inv_description" required><%= typeof inv_description !== 'undefined' ? inv_description : '' %></textarea>
    </div>
    <div>
      <label for="inv_image">Image Path:</label>
      <input type="text" id="inv_image" name="inv_image" required value="<%= typeof inv_image !== 'undefined' ? inv_image : '/images/vehicles/no-image.png' %>">
    </div>
    <div>
      <label for="inv_thumbnail">Thumbnail Path:</label>
      <input type="text" id="inv_thumbnail" name="inv_thumbnail" required value="<%= typeof inv_thumbnail !== 'undefined' ? inv_thumbnail : '/images/vehicles/no-image-tn.png' %>">
    </div>
    <div>
      <label for="inv_price">Price:</label>
      <input type="number" id="inv_price" name="inv_price" min="0" step="0.01" required value="<%= typeof inv_price !== 'undefined' ? inv_price : '' %>">
    </div>
    <div>
      <label for="inv_miles">Miles:</label>
      <input type="number" id="inv_miles" name="inv_miles" min="0" required value="<%= typeof inv_miles !== 'undefined' ? inv_miles : '' %>">
    </div>
    <div>
      <label for="inv_color">Color:</label>
      <input type="text" id="inv_color" name="inv_color" required value="<%= typeof inv_color !== 'undefined' ? inv_color : '' %>">
    </div>
    <input type="hidden" name="inv_id"
    <% if(locals.inv_id) { %> value="<%= locals.inv_id %>" <% } %>>
    <button type="submit" disabled>Update Vehicle</button>
  </form>

  <script src="/js/inventory.js"></script>
  <script src="/js/inv-update.js"></script>
</div>